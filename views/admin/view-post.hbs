  <!-- Main content -->
  <div class="container">
    <h1 class="mb-4">Single Post</h1>

    <div class="post-details">
      <h2>{{post.title}}</h2>
         <img src="/{{post.image}}" alt="{{post.title}}">
      <p>Category: {{post.category}}</p>
      <p>Tags: {{post.tags}}</p>
      <p>{{post.content}}</p>
   
      <p>Date: {{post.date}}</p>
    </div>

    <div class="action-links">
      <a href="/admin" class="btn btn-secondary">Back to Admin</a>
    </div>
  </div>



